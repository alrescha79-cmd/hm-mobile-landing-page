---
import type { Locale } from '../i18n/i18n';
import { t } from '../i18n/i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
const currentYear = new Date().getFullYear();
---

<footer class="relative pt-16 pb-8 md:pb-8 pb-24 border-t border-surface-200/50 dark:border-surface-800/50">
  <div class="absolute inset-0 -z-10">
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-gradient-to-t from-primary-500/5 to-transparent rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-12">
      <!-- Brand -->
      <div class="sm:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center shadow-lg shadow-primary-500/25">
            <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.858 15.355-5.858 21.213 0" />
            </svg>
          </div>
          <span class="text-xl font-bold text-surface-900 dark:text-white">HM<span class="gradient-text">Mobile</span></span>
        </div>
        <p class="text-sm text-surface-600 dark:text-surface-400 max-w-sm leading-relaxed">
          {i.footer.description}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h4 class="font-semibold text-surface-900 dark:text-white mb-4 text-sm uppercase tracking-wider">Links</h4>
        <ul class="space-y-3">
          <li>
            <a href="https://github.com/alrescha79-cmd/huawei-manager-mobile" target="_blank" rel="noopener noreferrer" class="footer-link">
              <svg class="w-4 h-4 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
              {i.footer.links.github}
            </a>
          </li>
          <li>
            <a href="https://github.com/alrescha79-cmd/huawei-manager-mobile/releases" target="_blank" rel="noopener noreferrer" class="footer-link">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" /></svg>
              {i.footer.links.releases}
            </a>
          </li>
          <li>
            <a href="https://github.com/alrescha79-cmd/huawei-manager-mobile/issues" target="_blank" rel="noopener noreferrer" class="footer-link">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              {i.footer.links.issues}
            </a>
          </li>
          <li>
            <a href="https://github.com/alrescha79-cmd/huawei-manager-mobile/blob/main/docs/USER_GUIDE.md" target="_blank" rel="noopener noreferrer" class="footer-link">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
              {i.footer.links.docs}
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-semibold text-surface-900 dark:text-white mb-4 text-sm uppercase tracking-wider">Legal</h4>
        <ul class="space-y-3">
          <li>
            <a href="https://github.com/alrescha79-cmd/huawei-manager-mobile/blob/main/LICENSE" target="_blank" rel="noopener noreferrer" class="footer-link">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
              {i.footer.license}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-surface-200/30 dark:border-surface-800/30 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-surface-500">
        Â© {currentYear} Huawei Manager Mobile
      </p>
      <p class="text-sm text-surface-500">
        {i.footer.madeWith} <a href="https://cakson.my.id" target="_blank" rel="noopener noreferrer" class="text-primary-500 hover:text-primary-400 font-medium transition-colors duration-300 no-underline">{i.footer.author}</a>
      </p>
    </div>
  </div>
</footer>

