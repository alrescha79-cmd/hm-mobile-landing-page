---
import { Image } from "astro:assets";
import type { Locale } from "../i18n/i18n";
import { t } from "../i18n/i18n";
import screenshotHomeDark from "../assets/images/screenshot-home-dark.jpg";
import screenshotHomeLight from "../assets/images/screenshot-home-light.jpg";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center pt-20 overflow-hidden"
>
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 dark:bg-primary-500/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-500/10 dark:bg-accent-500/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-primary-500/5 to-accent-500/5 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <div class="animate-fade-up">
          <span
            class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs sm:text-sm font-medium bg-primary-500/10 dark:bg-primary-500/15 text-primary-600 dark:text-primary-400 border border-primary-500/20 mb-6"
          >
            <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
            ></span>
            {i.hero.badge}
          </span>
        </div>

        <h1
          class="animate-fade-up stagger-1 text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-extrabold leading-tight tracking-tight"
        >
          {
            i.hero.title.split("\n").map((line: string, idx: number) => (
              <span class:list={[idx > 0 && "gradient-text"]}>
                {idx > 0 && <br />}
                {line}
              </span>
            ))
          }
        </h1>

        <p
          class="animate-fade-up stagger-2 mt-6 text-lg sm:text-xl text-surface-600 dark:text-surface-400 max-w-xl mx-auto lg:mx-0 leading-relaxed"
        >
          {i.hero.description}
        </p>

        <div
          class="animate-fade-up stagger-3 mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
        >
          <a
            href="#download"
            class="inline-flex items-center justify-center gap-2 px-8 py-3.5 text-base font-semibold text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-xl shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 transition-all duration-300 hover:-translate-y-0.5"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
            {i.hero.cta}
          </a>
          <a
            href="https://github.com/alrescha79-cmd/huawei-manager-mobile"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-3.5 text-base font-semibold text-surface-700 dark:text-surface-300 bg-surface-100 dark:bg-surface-800 hover:bg-surface-200 dark:hover:bg-surface-700 rounded-xl border border-surface-200 dark:border-surface-700 transition-all duration-300 hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            {i.hero.ctaSecondary}
          </a>
        </div>

        <div
          class="animate-fade-up stagger-4 mt-6 flex flex-col sm:flex-row items-center gap-3 justify-center lg:justify-start"
        >
          <p
            class="text-sm text-surface-500 dark:text-surface-500 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            {i.hero.builtWith}
          </p>
          <p
            id="download-count"
            data-locale={locale}
            data-label={i.hero.totalDownloads}
            class="text-sm text-surface-500 dark:text-surface-500 items-center gap-2 hidden"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
            <span id="download-count-value"></span>
          </p>
        </div>
      </div>

      <!-- Hero Image / Phone Mockup -->
      <div
        class="animate-fade-up stagger-3 relative flex justify-center lg:justify-end"
      >
        <div class="relative">
          <!-- Glow effect behind phone -->
          <div
            class="absolute -inset-4 bg-linear-to-r from-primary-500/20 to-accent-500/20 rounded-3xl blur-2xl"
          >
          </div>

          <!-- Phone frame -->
          <div class="relative w-64 sm:w-72 lg:w-80 mx-auto">
            <div
              class="relative bg-surface-800 dark:bg-surface-300 rounded-[2.5rem] p-3 shadow-2xl shadow-surface-900/30 border border-surface-300/50 dark:border-surface-700/50"
            >
              <!-- Punch-hole camera -->
              <div
                class="absolute top-4 left-1/2 -translate-x-1/2 w-3 h-3 bg-surface-400 dark:bg-surface-950 rounded-full z-10 ring-1 ring-surface-500/50 dark:ring-surface-700/50"
              >
              </div>

              <!-- Screen -->
              <div
                class="relative rounded-[2rem] overflow-hidden bg-surface-950 aspect-[9/19.5]"
              >
                <Image
                  src={screenshotHomeDark}
                  alt="Huawei Manager Mobile - Home Screen (Dark)"
                  class="w-full h-full object-cover hidden dark:block"
                  format="webp"
                  quality={80}
                  loading="eager"
                />
                <Image
                  src={screenshotHomeLight}
                  alt="Huawei Manager Mobile - Home Screen (Light)"
                  class="w-full h-full object-cover block dark:hidden"
                  format="webp"
                  quality={80}
                  loading="eager"
                />
              </div>
            </div>
          </div>

          <!-- Floating badges -->
          <div
            class="absolute -top-4 -left-4 sm:-left-8 glass-card px-3 py-2 shadow-xl animate-bounce"
            style="animation-duration: 3s;"
          >
            <div class="flex items-center gap-2">
              <div
                class="w-8 h-8 rounded-lg bg-green-500/15 flex items-center justify-center"
              >
                <svg
                  class="w-4 h-4 text-green-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <span
                class="text-xs font-semibold text-surface-700 dark:text-surface-300"
                >Signal: -85 dBm</span
              >
            </div>
          </div>

          <div
            class="absolute -bottom-4 -right-4 sm:-right-8 glass-card px-3 py-2 shadow-xl animate-bounce"
            style="animation-duration: 4s; animation-delay: 1s;"
          >
            <div class="flex items-center gap-2">
              <div
                class="w-8 h-8 rounded-lg bg-primary-500/15 flex items-center justify-center"
              >
                <svg
                  class="w-4 h-4 text-primary-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0"
                  ></path>
                </svg>
              </div>
              <span
                class="text-xs font-semibold text-surface-700 dark:text-surface-300"
                >WiFi: Active</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg
      class="w-6 h-6 text-surface-400"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<script>
  async function fetchDownloadCount() {
    const el = document.getElementById("download-count");
    const valueEl = document.getElementById("download-count-value");
    if (!el || !valueEl) return;

    const locale = el.dataset.locale === "id" ? "id-ID" : "en-US";
    const label = el.dataset.label || "Total Downloads";
    const CACHE_KEY = "hm_download_count";
    const CACHE_TTL = 3600000; // 1 hour

    function showCount(total: number) {
      valueEl!.textContent = `${total.toLocaleString(locale)}+ ${label}`;
      el!.classList.remove("hidden");
      el!.classList.add("flex");
    }

    try {
      const cached = localStorage.getItem(CACHE_KEY);
      if (cached) {
        const { count, ts } = JSON.parse(cached);
        if (Date.now() - ts < CACHE_TTL && count > 0) {
          showCount(count);
          return;
        }
      }
    } catch {}

    try {
      const res = await fetch(
        "https://api.github.com/repos/alrescha79-cmd/huawei-manager-mobile/releases",
        { headers: { Accept: "application/vnd.github.v3+json" } }
      );
      if (!res.ok) return;

      const releases = await res.json();
      const total = releases.reduce(
        (sum: number, release: any) =>
          sum +
          (release.assets?.reduce(
            (s: number, a: any) => s + (a.download_count || 0),
            0
          ) || 0),
        0
      );

      if (total > 0) {
        showCount(total);
        try {
          localStorage.setItem(
            CACHE_KEY,
            JSON.stringify({ count: total, ts: Date.now() })
          );
        } catch {}
      }
    } catch {}
  }

  fetchDownloadCount();
</script>
