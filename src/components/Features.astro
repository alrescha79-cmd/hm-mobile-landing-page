---
import type { Locale } from '../i18n/i18n';
import { t } from '../i18n/i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);

const features = [
  {
    key: 'signalMonitor',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
    color: 'from-green-500 to-emerald-600',
    bgColor: 'bg-green-500/10 dark:bg-green-500/15',
  },
  {
    key: 'wifiManagement',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.858 15.355-5.858 21.213 0" /></svg>`,
    color: 'from-blue-500 to-blue-600',
    bgColor: 'bg-blue-500/10 dark:bg-blue-500/15',
  },
  {
    key: 'dataUsage',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" /></svg>`,
    color: 'from-purple-500 to-violet-600',
    bgColor: 'bg-purple-500/10 dark:bg-purple-500/15',
  },
  {
    key: 'smsManagement',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" /></svg>`,
    color: 'from-orange-500 to-amber-600',
    bgColor: 'bg-orange-500/10 dark:bg-orange-500/15',
  },
  {
    key: 'parentalControl',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    color: 'from-red-500 to-rose-600',
    bgColor: 'bg-red-500/10 dark:bg-red-500/15',
  },
  {
    key: 'batteryStatus',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
    color: 'from-yellow-500 to-amber-500',
    bgColor: 'bg-yellow-500/10 dark:bg-yellow-500/15',
  },
  {
    key: 'darkMode',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>`,
    color: 'from-indigo-500 to-indigo-600',
    bgColor: 'bg-indigo-500/10 dark:bg-indigo-500/15',
  },
  {
    key: 'multiLanguage',
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" /></svg>`,
    color: 'from-cyan-500 to-teal-600',
    bgColor: 'bg-cyan-500/10 dark:bg-cyan-500/15',
  },
];
---

<section id="features" class="py-20 sm:py-32 relative">
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-surface-200 dark:via-surface-800 to-transparent"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16 sm:mb-20">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight">
        <span class="gradient-text">{i.features.sectionTitle}</span>
      </h2>
      <p class="mt-4 text-lg text-surface-600 dark:text-surface-400">
        {i.features.sectionDescription}
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {features.map((feature, idx) => {
        const featureData = i.features[feature.key as keyof typeof i.features] as { title: string; description: string };
        return (
          <div class={`group glass-card p-6 hover:shadow-xl hover:shadow-primary-500/5 transition-all duration-300 hover:-translate-y-1 animate-fade-up stagger-${idx + 1}`}>
            <div class={`w-12 h-12 rounded-xl ${feature.bgColor} flex items-center justify-center mb-4 group-hover:scale-110 transition-transform`}>
              <div class={`bg-gradient-to-r ${feature.color} bg-clip-text`}>
                <Fragment set:html={feature.icon} />
              </div>
            </div>
            <h3 class="text-lg font-bold text-surface-900 dark:text-white mb-2">{featureData.title}</h3>
            <p class="text-sm text-surface-600 dark:text-surface-400 leading-relaxed">{featureData.description}</p>
          </div>
        );
      })}
    </div>
  </div>
</section>
